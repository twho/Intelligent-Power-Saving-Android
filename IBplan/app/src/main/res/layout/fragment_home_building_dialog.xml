<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_width"
        android:id="@+id/fragment_home_dashboard_iv"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_home_dashboard_spinner"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/fragment_home_dashboard_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_ok"
            android:id="@+id/fragment_home_dashboard_btn1"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_follow"
            android:id="@+id/fragment_home_dashboard_btn2"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>